@model Carro

<h2>Preencha os campos com os dados do veívulo </h2>
<form class="col-md-4" asp-action="Create">
    <div class="form-group">
        <label asp-for="marca" class="control-label"></label>
        <input asp-for="marca" class="form-control" />
        <span class="text-danger" asp-validation-for="marca"></span>
    </div>
    <div class="form-group">
        <label asp-for="modelo" class="control-label"></label>
        <input asp-for="modelo" class="form-control" />
        <span class="text-danger" asp-validation-for="modelo"></span>
    </div>
    <div class="form-group">
        <label asp-for="preco" class="control-label"></label>
        <input asp-for="preco" class="form-control" />
        <span class="text-danger" asp-validation-for="preco"></span>
    </div>
    <div class="form-group">
        <label asp-for="ano" class="control-label"></label>
        <input asp-for="ano" class="form-control" />
        <span class="text-danger" asp-validation-for="ano"></span>
    </div>
    <div class="form-group">
        <label asp-for="url1" class="control-label"></label>
        <input asp-for="url1" class="form-control" />
        <span class="text-danger" asp-validation-for="url1"></span>
    </div>
    <div class="form-group">
        <label asp-for="descricao" class="control-label"></label>
        <input asp-for="descricao" class="form-control" />
    </div>
    <div class="col-12">
        <input type="submit" class="btn btn-primary" value="Criar!" />
        <a class="btn btn-dark" asp-area="" asp-controller="Carro" asp-action="Index" role="button">Voltar</a>
    </div>
</form>
