@model
<h2>Preencha os campos com os dados do veívulo </h2>
<form class="col-md-4" asp-action="Create">
    <div class="form-group">
        <label asp-for="marca" class="control-label">Marca</label>
        <input asp-for="marca" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="modelo" class="control-label">Modelo</label>
        <input asp-for="modelo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="preco" class="control-label">Preço R$</label>
        <input asp-for="Modelo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Ano" class="control-label">Ano</label>
        <input asp-for="Ano" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="url" class="control-label">URL da imagem</label>
        <input asp-for="url" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="descricao" class="control-label">Descrição</label>
        <input asp-for="descricao" class="form-control" />
    </div>
    <div class="col-12">
        <input type="submit" class="btn btn-primary" value="Criar!" />
        <a class="btn btn-dark" asp-area="" asp-controller="Carro" asp-action="Index" role="button">Voltar</a>
    </div>
</form>
