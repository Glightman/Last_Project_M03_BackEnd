@model TesteDrive

<h2>Preencha os campos com os dados do veívulo </h2>
<form class="col-md-4" asp-action="Update">
    <div class="form-group">
        <input typeof="hidde" asp-for="id" />
        <label asp-for="nome" class="control-label"></label>
        <input asp-for="nome" class="form-control" />
        <span class="text-danger" asp-validation-for="nome"></span>
    </div>
    <div class="form-group">
        <label asp-for="celular" class="control-label"></label>
        <input asp-for="celular" class="form-control" />
        <span class="text-danger" asp-validation-for="celular"></span>
    </div>
    <div class="form-group">
        <label asp-for="tipo" class="control-label"></label>
        <input asp-for="tipo" class="form-control" />
        <span class="text-danger" asp-validation-for="tipo"></span>
    </div>
    <div class="form-group">
        <label asp-for="carroid" class="control-label"></label>
        <input asp-for="carroid" class="form-control" />
        <span class="text-danger" asp-validation-for="carroid"></span>
    </div>
    <div class="col-12">
        <input type="submit" class="btn btn-primary" value="Salvar mudanças" />
        <a class="btn btn-dark" asp-action="Index" role="button">Cancelar</a>
    </div>
</form>